<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/container"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context="edu.washington.akpuri.capstone.QuickText" tools:ignore="MergeRootFrame" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="322dp"
        android:layout_gravity="center_horizontal|top"
        android:id="@+id/quickTextContainer"
        android:layout_marginTop="100dp"
        android:padding="6dp">

    </FrameLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next"
        android:id="@+id/next"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="Add Quick Text"
        android:id="@+id/addNewQuickText"
        android:layout_gravity="right|bottom"
        android:layout_marginBottom="70dp"
        android:layout_marginRight="20dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/quickTextInstructions"
        android:id="@+id/quickTextInstructions"
        android:layout_gravity="center_horizontal|top"
        android:padding="6dp"
        android:layout_marginBottom="115dp" />

</FrameLayout>
