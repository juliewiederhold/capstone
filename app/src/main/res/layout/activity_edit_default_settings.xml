<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.washington.akpuri.capstone.EditDefaultSettings">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/title_activity_edit_default_settings"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/edit_profile_button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/add"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="112dp" />

    <ImageButton
        android:id="@+id/edit_friends_button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/add"
        android:layout_alignTop="@+id/edit_profile_button"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/edit_safety_zones_button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/add"
        android:layout_alignTop="@+id/edit_friends_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:id="@+id/edit_app_number_blocking"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/add"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/textView9"
        android:layout_toLeftOf="@+id/textView8"
        android:layout_toStartOf="@+id/textView8" />

    <ImageButton
        android:id="@+id/edit_quick_texts_button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/add"
        android:layout_alignTop="@+id/edit_app_number_blocking"
        android:layout_toRightOf="@+id/edit_friends_button"
        android:layout_toEndOf="@+id/edit_friends_button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView7"
        android:layout_below="@+id/edit_profile_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:text="Edit Profile"
        android:layout_marginLeft="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Edit Friends"
        android:id="@+id/textView8"
        android:layout_alignTop="@+id/textView7"
        android:layout_alignLeft="@+id/edit_friends_button"
        android:layout_alignStart="@+id/edit_friends_button"
        android:layout_marginLeft="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Edit Safety Zones"
        android:id="@+id/textView9"
        android:layout_alignTop="@+id/textView8"
        android:layout_alignLeft="@+id/edit_safety_zones_button"
        android:layout_alignStart="@+id/edit_safety_zones_button"
        android:layout_marginLeft="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Edit App / Number Blocking"
        android:id="@+id/textView10"
        android:layout_alignLeft="@+id/edit_app_number_blocking"
        android:layout_alignStart="@+id/edit_app_number_blocking"
        android:layout_below="@+id/edit_app_number_blocking"
        android:layout_alignRight="@+id/edit_app_number_blocking"
        android:layout_alignEnd="@+id/edit_app_number_blocking"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Edit Quick Texts"
        android:id="@+id/textView11"
        android:layout_alignTop="@+id/textView10"
        android:layout_alignLeft="@+id/edit_quick_texts_button"
        android:layout_alignStart="@+id/edit_quick_texts_button" />

</RelativeLayout>
